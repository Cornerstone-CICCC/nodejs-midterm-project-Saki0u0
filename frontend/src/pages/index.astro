---
import BaseLayout from "../Layouts/BaseLayout.astro"
---

<BaseLayout>
	<div class="container">
		<img src="./home.jpeg" alt="home-image">
		<div class="right-side">
			<h1>
				Welcome to Play Lab
			</h1>
			<h3>Letâ€™s Start Your Music Life</h3>
			<div class="buttons">
				<button class="signup-btn">Sign Up</button>
				<button class="login-btn">Log In</button>
			</div>
		</div>
		<div class="login">
			<div class="back">
				<img src="./back.svg" alt="back" class ="back-icon">
				<p>back</p>
			</div>
			<form class="login-form">
				<label>
					<span>Username</span>
					<input type="text" name="username" autocomplete="off" class="username" required placeholder="input your username">
				</label>
				<label>
					<span>Password</span>
					<input type="password" name="password" placeholder="input your password"  class="password" required>
				</label>
				<button type="submit">Log In</button>
			</form>
		</div>
		<div class="sign-up">
			<div class="back">
				<img src="./back.svg" alt="back" class="back-icon">
				<p>back</p>
			</div>
			<form class="signup-form">
				<label>
					<span>Name</span>
					<input type="text" name="name" autocomplete="off" id="name" required placeholder="input your name">
				</label>
				<label>
					<span>Username</span>
					<input type="text" name="username" autocomplete="off" class="username" required placeholder="input your username">
				</label>
				<label>
					<span>E-mail address</span>
					<input type="text" name="email" placeholder="exaple@gmail.com" id="email" required>
				</label>
				<label>
					<span>Password</span>
					<input type="password" name="password" placeholder="input your password" class="password" required>
				</label>
				<button type="submit">Sign Up</button>
			</form>
		</div>
	</div>
</BaseLayout>
<style>
	.container{
		display: flex;
		background-color: black;
		margin:0;
		align-items: center;
		justify-content: center;
		height:90vh;
	}

	img{
		width:60%;
	}

	h1,h3{
		color:white;
		text-align: center;
	}

	h1{
		font-size:2.5rem;
	}

	h3{
		font-weight: lighter;
	}

	.right-side{
		width:40%;
		margin-right:96px;
		display: block;
	}

	.buttons{
		text-align: center;
		display: flex;
		justify-content: center;
	}

	button{
		width: 160px;
		height:40px;
		border-radius: 30px;
		font-size: 1rem;
		background-color:#65558f;
		color: white;
		border:none;
		cursor: pointer;
	}
	
	button:first-child{
		margin-right:40px;
	}

	button:hover{
		opacity: 0.8;
	}

	.login,.sign-up{
		background-color: white;
		border-radius: 10px;
		width:440px;
		margin-right:96px;
		display: none;
		padding: 8px;
	}

	.login-form,.signup-form {
  display: flex;
  flex-direction: column;
  gap: 15px; 
	padding:24px;
	padding-top:16px;
}

 label {
  display: flex;
  flex-direction: column;
	margin-bottom: 16px;
}

 span{
	margin-bottom: 8px;
}

input{
	padding:16px;
}

.login-form button,.signup-form button{
	width:100%;
	background-color:#2c2c2c;
	color:white;
	border-radius: 10px;
}

p{
	cursor: pointer;
}

p:hover{
	opacity:0.8;
}

.back{
	display:flex;
}

.back-icon{
	width:24px;
	cursor: pointer;
}
</style>
